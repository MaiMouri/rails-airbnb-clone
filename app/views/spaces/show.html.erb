          <h2>tetttttttttt</h2>
          <p>testtesttest</p>
        </div>
      </div>
      <div class="card-feature">
        <div class="card-feature-product">
          <h2>tetttttttttt</h2>
          <p>testtesttest</p>
        </div>
      </div>
      <div class="description">
        <p><%= @space.description %></p>
      </div>
    </div>

    <div class="reservation-container col-12 col-lg-5">
      <div class="reservation-box p-5">
        <div class="reservation-details d-flex flex-column">
          <h2><strong>¥<%= @space.price %></strong> / day</h2>
          <%= simple_form_for @space do |f| %>
            <span>check in</span><%= f.input :name %>
            <span>check out</span><%= f.input :name %>
            <span>???</span><%= f.submit class: 'btn btn-secondary btn-submit' %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
