<div class="container flex">
  <div class="row flex-column">
    <h1>Spaces#show</h1><br>
    <h2 class="space-name"><%= @space.name %></h2>
    <p><%= @space.address %></p>
    <img src="https://cdn.pixabay.com/index/2021/11/02/07-35-50-740_1440x550.jpg" style="height:300px;">
  </div>
  <div class="row">
    <div class="space-detail p-4 col-12 col-lg-7">
    <div class="user-box py-4">
      <div class="notification">
        <img src='https://kitt.lewagon.com/placeholder/users/arthur-littm' class="avatar-large" />
        <div class="notification-content">
          <p><h2 class="space-name"><%= @space.name %></h2></p>
