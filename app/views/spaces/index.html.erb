<div class="container">
  <h1>Looking for a place for your next pop-up project?</h1>
  <h3>Choose a venue to bring you incredible success!</h3>
    <div class="row">
      <div class="cards col-lg-6">
        <% @spaces.each do |space| %>
          <%= link_to space_path(space) do %>
            <div class="card-product mb-2">
              <div class="card-product-img">
                <%= cl_image_tag space.photos.first.key, height: 200, width: 200, crop: :fill %>
              </div>
              <div class="card-product-infos">
                <h2><%= space.name %></h2>
                <p><%= space.category.capitalize %></p>
                <p><%= space.address %></p>
                <p><%= space.size %> square meters</p>
                <span><%= space.description %></span>
                <p><%= space.price %> yen</p>
              </div>
              <!-- product infos-->
            </div>
            <!--closing card product-->
          <% end %>
        <% end %>
      </div>
    <!--closing the cards-->

      <div class="col-lg-6 sticky-top" style="height: 650px;">
        <div id="map"
          style="width: 100%; height: 100%;"
          data-markers="<%= @markers.to_json %>"
          data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY']%>"></div>
        </div>
      </div>

  <!--closing row-->
  </div>
  </div>
</div>
<!-- closing container-->
